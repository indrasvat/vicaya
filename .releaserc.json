{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/set-version.sh ${nextRelease.version} && ./scripts/build-release.sh"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "Cargo.toml"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "artifacts/*.tar.gz", "label": "vicaya macOS universal binary (tar.gz)" },
          { "path": "artifacts/*.sha256", "label": "SHA256 checksums" }
        ],
        "successComment": false,
        "failComment": false
      }
    ]
  ]
}
